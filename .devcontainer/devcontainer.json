{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    {
      "type": "bind",
      "source": "${env:HOME}",
      "target": "${env:HOME}"
    }  
  ],
  "runArgs": ["-w","${env:HOME}","--userns=keep-id"],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "Tyriar.luna-paint",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "ms-python.autopep8",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.live-server",
        "Stephanvs.dot",
        "tintinweb.graphviz-interactive-preview"
      ]
    }
  },
  "shutdownAction": "none"
}